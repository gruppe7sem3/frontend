  <script>
    // ...

async function fetchAllMovies() {
  const url = 'http://localhost:2222/api/movies/all'; // Update with your actual URL

  try {
    const response = await fetch(url);
    if (!response.ok) {
      throw new Error('Network response was not ok');
    }
    const data = await response.json();
    const allMoviesElement = document.getElementById('allMovies');

    if (data.length === 0) {
      allMoviesElement.innerHTML = '<p>No movies found.</p>';
    } else {
      data.forEach(movie => {
        const movieDetails = `
          <div class="movie-block" id="movie-${movie.id}">
            <h2 onclick="toggleDetails(${movie.id})">${movie.title}</h2>
            <img src="${movie.poster}" alt="${movie.title} Poster">
            <p>Director: ${movie.director}</p>
            <p>Actors: ${movie.actors}</p>
            <p>IMDb ID: ${movie.imdbID}</p>
            <p>Year: ${movie.year}</p>
            <button class="expand-button" onclick="toggleDetails(${movie.id})">Expand</button>
            <div class="hidden-details" id="hidden-details-${movie.id}">
              <p class="plot">Plot: ${movie.plot}</p>
              <p>Rated: ${movie.rated}</p>
              <p>Released: ${movie.released}</p>
              <p>Runtime: ${movie.runtime}</p>
              <p>Genre: ${movie.genre}</p>
            </div>
          </div>
        `;
        allMoviesElement.innerHTML += movieDetails;
      });
    }
  } catch (error) {
    console.error('Fetch error:', error);
    const allMoviesElement = document.getElementById('allMovies');
    allMoviesElement.innerHTML = '<p>Error fetching movie list</p>';
  }
}

// Updated toggleDetails function to work for individual movies
function toggleDetails(movieId) {
  const hiddenDetails = document.getElementById(`hidden-details-${movieId}`);
  const plot = hiddenDetails.querySelector('.plot');
  const expandButton = document.querySelector(`#movie-${movieId} .expand-button`);
  if (hiddenDetails.style.display === 'none' || hiddenDetails.style.display === '') {
    hiddenDetails.style.display = 'block';
    expandButton.textContent = 'Collapse';
    plot.style.display = 'block'; // Show the plot
  } else {
    hiddenDetails.style.display = 'none';
    expandButton.textContent = 'Expand';
    plot.style.display = 'none'; // Hide the plot
  }

  // Collapse details for other movies
  const allMovieBlocks = document.querySelectorAll('.movie-block');
  allMovieBlocks.forEach(movieBlock => {
    const currentMovieId = movieBlock.id.replace('movie-', '');
    if (currentMovieId != movieId) {
      const otherHiddenDetails = document.getElementById(`hidden-details-${currentMovieId}`);
      const otherExpandButton = movieBlock.querySelector('.expand-button');
      otherHiddenDetails.style.display = 'none';
      otherExpandButton.textContent = 'Expand';
    }
  });
}

fetchAllMovies();
</script>

